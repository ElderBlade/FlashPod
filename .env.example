# FlashPod Environment Configuration
# Copy this file to .env and customize for your deployment

# Application Settings
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
DEBUG=false
PORT=8000

# Container Configuration (for Docker/Podman)
USER_ID=1001
GROUP_ID=1001
DATA_DIR=./data

# Database Configuration
# For development (relative path)
DATABASE_URL=sqlite:///./data/flashpod.db

# For containers (absolute path to bind mount)
# DATABASE_URL=sqlite:////data/flashpod.db

# PostgreSQL alternative (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/flashpod
# POSTGRES_PASSWORD=secure-password

# Authentication & Security
JWT_SECRET=change-this-secure-jwt-secret-key-minimum-32-chars
SECRET_KEY=change-this-secure-secret-key-minimum-32-chars
JWT_EXPIRATION_HOURS=24
JWT_ALGORITHM=HS256

# Security
CORS_ORIGINS=*
SECURE_COOKIES=true

# Development
AUTO_RELOAD=false

# Optional: External Services
# REDIS_URL=redis://localhost:6379/0
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password